        txt_itemlevel.setText(map.get("RANK").toString());
        txt_itemregion.setText(map.get("REGION").toString());
        txt_itembatch.setText(map.get("BATCH").toString());
        txt_iteminheritors.setText(map.get("INHERITOR").toString());
